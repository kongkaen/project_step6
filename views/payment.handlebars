<html>

  <head>
    <title>11 out of 10 Plumbing</title>
    <link rel="stylesheet" href="payment_styles.css">
  </head>

  <body>

        <header = id="page_header">
          <div class="container">
          <img src="plumber-van.png" alt="logo" class="logo">
          <nav>
            <ul>
              <li><a href="index.html">Dashboard</a></li>
              <li><a href="/schedule">Schedule</a></li>
              <li><a href="/invoice">Invoice</a></li>
              <li><a href="/customer">Customer</a></li>
              <li><a href='/employee'>Employee</a></li>
              <li><a href="/service">Service</a></li>
              <li><a href="/payment">Payment</a></li>
            </ul>
          </nav>
          </div>
        </header>



        <form class="submission-form" id="addperson" action="/payment" method="post">
          <h3>Add new Payment</h3>
            <label>Date:</label> <input type="date" name="payment_date"><br>
            <label>Amount:</label> <input type="number" name="amount" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"><br>
            <label>Invoice number</label> <input type="text" name="invoice_number"><br>
            <label>Payment Type:</label>
            <select name = "type_payment">
               <option value = "check">check</option>
               <option value = "credit card">credit card</option>
               <option value = "cash">cash</option>
               <option value = "money order">money order</option>
               <option value = "direct deposit">direct deposit</option>
               <option value = "other">other</option><br />
            <input type="submit" value="Submit" id="sendBtn">
         </form>


        <form class="submission-form" id='search_people' action='' method=''>
          <h3>Search Payment</h3>
            <label> Search payment by Transaction ID:</label>
            <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
            <input type="button" value="Search" onclick="searchPeopleByFirstName()" id="sendBtn">
        </form>

        <h3>Current Payment:</h3>
        <table>
            <thead>
                <th>Transaction ID</th>
                <th>Payment Date</th>
                <th>Amount</th>
                <th>Payment Type</th>
                <th>Invoice Number</th>
            </thead>
            <tbody>
                {{#each payment}}
                <tr>
                  <td>{{id}}</td>
                    <td>{{payment_date}}</td>
                    <td>{{amount}}</td>
                    <td>{{type_payment}}</td>
                    <td>{{invoice_number}}</td>
                    <td><button onclick="deletePayment({{id}})">Delete</button></td>
                    <td><a href="/payment/{{id}}">Update</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


  </body>

</html>
