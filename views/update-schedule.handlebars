<html>
<head>
  <style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Ubuntu:wght@700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Jost&display=swap');
  form {
    text-align: center;
    max-width: 600px;
    margin: 2rem auto;
    border-radius: 15px;
    padding: 2rem;
    font-size: 15px;
    background: #D5D8DC;
    font-family: 'Jost', sans-serif;

  }
  label{
    width: 200px;
    text-align: center;
    display: inline-block;
    padding: 1rem 0 .5rem;
    font-family: 'Jost', sans-serif;
  }

  input, text, select {
    width: 250px;
    font-size: 16px;
    padding: 10px;
    border: 1px solid #808B96;
    border-radius: 5px;
  }


  button{
    border: 0;
    background: #0080FF;
    padding: 10px;
    color: white;
    margin-left: 50%;
    margin-right: 50%;
    width: auto;
    text-transform: uppercase;
    cursor: pointer;
    font-family: 'Jost', sans-serif;
  }

  h1 {
    text-align: center;
    font-family: 'Jost', sans-serif;
  }



  </style>
</head>
<body>
  <h1>Update work order {{item.id}}:</h1>
  <form id="update-item" action="/service" method="post">
      Call reason: <input type="text" name="call_reason" value="{{item.call_reason}}"><br>
      Date: <input type="date" name="date" value="{{item.date}}"><br>
      Arrival window 1: <input type="time" name="arrival_windows_1" value="{{item.arrival_windows_1}}"><br>
      Arrival window 2: <input type="time" name="arrival_windows_2" value="{{item.arrival_windows_2}}"><br>
      Customer ID: <input type="text" name="customer_id" value="{{item.customer_id}}"><br>
      Status:
      <select name = "status" value="{{item.status}}">
        <option value = "Confirmed">Confirmed</option>
        <option value = "Call to Confirm">Call to Confirm</option>
       </select><br>
  </form>
  <button onclick="updateSchedule({{item.id}})">Update</button>
</body>

</html>
