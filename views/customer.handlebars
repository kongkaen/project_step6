        <form class="submission-form" id='search_people' action='' method=''>
          <h3>Search Customer</h3>
            <label> Search customer for first name starting with:</label>
            <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
            <input type="button" value="Search" onclick="searchPeopleByFirstName()" id="sendBtn">
        </form>

        <form class="submission-form" id='filter_people' action='' method=''>
  <!--- this form does not submit directly, the button handles all the interaction with backend -->
      <label> Filter by Employee working with </label>
      <select id='employee_filter' name="employee_id">
          {{#each employees}}
          <option value="{{employee_id}}">{{first_name}}</option>
          {{/each}}
      </select><br>
      <input type="button" value="Filter" onclick="filterPeopleByName()" id="sendBtn" />
  </form>

        <h3>Current Customer:</h3>
        <center>
          <h4>**Names below are randomly auto generated name and other information</h4>
        </center>
        <table>
            <thead>
              <th>Customer ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address 1</th>
                        <th>Address 2</th>
                        <th>City</th>
                        <th>Zip Code</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Sale Rep</th>
            </thead>
            <tbody>
                {{#each customer}}
                <tr>
                  <td>{{id}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{address1}}</td>
                    <td>{{address2}}</td>
                    <td>{{city}}</td>
                    <td>{{zip_code}}</td>
                    <td>{{state}}</td>
                    <td>{{country}}</td>
                    <td>{{phone_number}}</td>
                    <td>{{email}}</td>
                    <td>{{sale_rep}}</td>
                    <td><button onclick="deleteCustomer({{id}})">Delete</button></td>
                    <td><a href="/customer/{{id}}">Update</a></td>
                </tr>
                {{/each}}
            </tbody>
