<html>

  <head>
    <title>11 out of 10 Plumbing</title>
    <link rel="stylesheet" href="service_styles.css">
  </head>

  <body>

        <header = id="page_header">
          <div class="container">
          <img src="plumber-van.png" alt="logo" class="logo">
          <nav>
            <ul>
              <li><a href="index.html">Dashboard</a></li>
              <li><a href="/schedule">Schedule</a></li>
              <li><a href="/invoice">Invoice</a></li>
              <li><a href="/customer">Customer</a></li>
              <li><a href='/employee'>Employee</a></li>
              <li><a href="/service">Service</a></li>
              <li><a href="/payment">Payment</a></li>
            </ul>
          </nav>
          </div>
        </header>



        <form class="submission-form" id="addperson" action="/service" method="post">
          <h3>Add new Service</h3>
            <label>Name:</label> <input type="text" name="service_name"><br>
            <label>Price:</label> <input type="number" name="unit_price" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100"><br>
            <label>Description:</label> <input type="text" name="service_description"><br>
            <label>Warranty:</label>
            <select name = "warranty">
               <option value = "7 days">7 days</option>
               <option value = "14 days">14 days</option>
               <option value = "30 days">30 days</option>
               <option value = "60 days">60 days</option>
               <option value = "6 months">6 months</option>
               <option value = "1 year">1 year</option>
               <option value = "2 year">2 year</option>
               <option value = "No warranty">No warranty</option>
             </select><br>
            <input type="submit" value="Submit" id="sendBtn">
         </form>
        <br/>

        <form class="submission-form" id='search_people' action='' method=''>
          <h3>Search Service</h3>
            <label> Search service by Name:</label>
            <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
            <input type="button" value="Search" onclick="searchPeopleByFirstName()" id="sendBtn">
        </form>

        <h3>Current Service:</h3>
        <table>
            <thead>
                <th>Service ID</th>
                <th>Service name</th>
                <th>Unit price</th>
                <th>Service description</th>
                <th>Warranty</th>
            </thead>
            <tbody>
                {{#each service}}
                <tr>
                  <td>{{id}}</td>
                    <td>{{service_name}}</td>
                    <td>${{unit_price}}</td>
                    <td>{{service_description}}</td>
                    <td>{{warranty}}</td>
                    <td><button onclick="deleteService({{id}})">Delete</button></td>
                    <td><a href="/service/{{id}}">Update</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>


  </body>

</html>
